{
  "name": "smashtaps-scripts",
  "version": "1.0.0",
  "description": "Set of opinionated tools and extensions that will improve the DX of engineers.",
  "type": "commonjs",
  "bin": {
    "smashtaps-scripts": "./bin/smashtaps-scripts.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --check",
    "format:fix": "prettier --write",
    "format:fix:all": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --disable",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SmashTaps/smashtaps-scripts.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "DX",
    "DEV",
    "EX",
    "dev",
    "tools"
  ],
  "author": "roshan@smashtaps.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SmashTaps/smashtaps-scripts/issues"
  },
  "homepage": "https://github.com/SmashTaps/smashtaps-scripts#readme",
  "dependencies": {
    "chalk": "4.0.0",
    "prompt-sync": "^4.2.0"
  },
  "devDependencies": {
    "prettier": "2.7.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "pinst": "3.0.0",
    "eslint": "8.24.0",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.31.8",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "lint-staged": "13.0.3",
    "@commitlint/config-conventional": "17.1.0",
    "@commitlint/cli": "17.1.2",
    "commitizen": "4.2.5",
    "@digitalroute/cz-conventional-changelog-for-jira": "7.4.1"
  }
}